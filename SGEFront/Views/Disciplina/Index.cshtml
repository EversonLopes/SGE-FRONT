@model IEnumerable<SGEFront.Models.Disciplina>

@{
    ViewBag.Title = "Disciplinas";
}

<br />
<h2>Disciplinas</h2>
<br />
<br />

<p>
    <a href="@Url.Action("Create", "Disciplina")" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Cadastrar
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisciplinaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplinaNome)
            </th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0 && Model != null)
        {
            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisciplinaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisciplinaNome)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Disciplina", new { id = item.DisciplinaId })" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a href="@Url.Action("Details", "Disciplina", new { id = item.DisciplinaId })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            Detalhes
                        </a>
                        <a href="@Url.Action("Delete", "Disciplina", new { id = item.DisciplinaId })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Excluir
                        </a>
                    </td>
                </tr>

            }
        }

    </tbody>

</table>