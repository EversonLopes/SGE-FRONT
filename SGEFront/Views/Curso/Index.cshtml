@model IEnumerable<SGEFront.Models.Curso>

@{
    ViewBag.Title = "Cursos";
}

<br />
<h2>Cursos</h2>
<br />
<br />

<p>
    <a href="@Url.Action("Create", "Curso")" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Cadastrar
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CursoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CursoNome)
            </th>
         

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0 && Model != null)
        {
            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CursoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CursoNome)
                    </td>
                  

                    <td>
                        <a href="@Url.Action("Edit", "Curso", new { id = item.CursoId })" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a href="@Url.Action("Details", "Curso", new { id = item.CursoId })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            Detalhes
                        </a>
                        <a href="@Url.Action("Delete", "Curso", new { id = item.CursoId })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Excluir
                        </a>
                        <a href="@Url.Action("AdicionarDisciplina", "Curso", new { id = item.CursoId })" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Incluir Disciplinas
                        </a>
                        <a href="@Url.Action("MostrarDisciplinasCurso", "Curso", new { id = item.CursoId })" class="btn btn-info btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Mostrar Disciplinas
                        </a>





                        


                    </td>
                </tr>

            }
        }

    </tbody>

</table>


<div>


</div>