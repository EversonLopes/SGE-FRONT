@model  IEnumerable<SGEFront.Models.DisciplinasCursos>
@using SGEFront.Models;


@{
    ViewBag.Title = "AdicionarDisciplina";
}

<h2>AdicionarDisciplina</h2>


@using (Html.BeginForm("AdicionarDisciplina", "Curso", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>DisciplinasCursos</h4>
    <hr />



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FirstOrDefault().Id)
    <div class="form-group">
        @Html.LabelFor(model => model.FirstOrDefault().CursoID_FK, htmlAttributes: new { @class = "control-label col-md-2" });
        <div class="col-md-10">
            <!--'D@Html.EditorFor(model => model.FirstOrDefault().CursoID_FK, new { htmlAttributes = new { d@class = "form-control" } })-->
            @Html.DropDownListFor(model => model.FirstOrDefault().CursoID_FK, (SelectList)ViewBag.Cursos, "Selecione", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstOrDefault().CursoID_FK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FirstOrDefault().DisciplinaID_FK, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <!-- D@Html.EditorFor(model => model.FirstOrDefault().DisciplinaID_FK, new { htmlAttributes = new { d@class = "form-control" } })-->
            @Html.DropDownListFor(model => model.FirstOrDefault().DisciplinaID_FK, (SelectList)ViewBag.Disciplinas, "Selecione", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstOrDefault().DisciplinaID_FK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Ir para Lista", "MostrarDisciplinasCurso")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
