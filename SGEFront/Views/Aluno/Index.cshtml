@model IEnumerable<SGEFront.Models.Aluno>

@{
    ViewBag.Title = "Alunos";
}

<br />
<h2>Alunos</h2>
<br />
<br />

<p>
    <a href="@Url.Action("Create", "Aluno")" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Cadastrar
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlunoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso.CursoNome)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0 && Model != null)
        {
            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlunoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso.CursoNome)
                    </td>

                    <td>
                        <a href="@Url.Action("Edit", "Aluno", new { id = item.AlunoId })" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a href="@Url.Action("Details", "Aluno", new { id = item.AlunoId })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                            Detalhes
                        </a>
                        <a href="@Url.Action("Delete", "Aluno", new { id = item.AlunoId })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            Excluir
                        </a>
                    </td>
                </tr>

            }
        }

    </tbody>

</table>