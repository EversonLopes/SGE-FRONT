@model  IEnumerable<SGEFront.Models.DisciplinasAlunos>

@{
    ViewBag.Title = "MostrarInfoAlunos";
}

<h2>MostrarInfoAlunos</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.DisciplinasAlunos.FirstOrDefault().Disciplina.DisciplinaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.DisciplinasAlunos.FirstOrDefault().MediaFinal)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aluno.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Disciplina.DisciplinaNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MediaFinal)
                    </td>


                </tr>
            }
        }
    </tbody>

</table>